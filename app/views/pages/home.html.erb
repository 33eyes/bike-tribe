
<div class="hero text-center">
  <%= image_tag("bitSpokes_logo_white_big.png") %>
  <h2>Bike in the cloud</h2>
  <h3>Team up. Share <div class="share-text-box">bikes</div>.</h3>
  
  <%= link_to "Sign up for free", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-lg signup-button' %>
</div>

<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your profile</h2>
        <% if current_user.profile %>
          <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
          <%= link_to "View your profile", user_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
        <% else %>
          <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center"></h2>
        <p></p>
        <%= link_to "Visit the community", users_path, class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
  <% else %>
    
      
    
    <!--
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Premium Membership</h2>
        <h4>Sign up for the premium account for $1/month and get access to the community and extra features</h4>
        <%= link_to "Sign up for Premium", new_user_registration_path(plan: @premium_plan.id), class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
    -->
    
    
  <% end %>

</div>

