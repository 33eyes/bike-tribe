<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Add a new interest</h1>
    <div class="well">
      
      <%= form_for @interest, url: new_interest_path, html: { multipart: true } do |f| %>
  
        <%= f.fields_for :topic do |topic_form| %>
          <%= topic_form.label :interest_topic %>
          <%= topic_form.collection_select( :topic_id, Topic.all, :id, :topic_name) %>
        <% end %>
        
        <div class="form-group">
          <%= f.label :experience_level %>
          <%= f.select( :experience_level,[['beginner', 1],['intermediate', 2],['expert',3]]) %>
        </div>
        
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :interest_description, class: 'form-control' %>
        </div>
        <div class="form-group btn-profile-submit">
          <%= f.submit "Add", class: 'btn btn-green' %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>