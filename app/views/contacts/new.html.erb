<div class="row">
  <div class="col-md-2" id="about-title-section">
    <div id="about-title" class="vertical">
      <h2>Contact us</h2>
    </div>
  </div>
    <div class="col-md-4">
        <div class="well">
            <%= form_for @contact do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                    
                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control' %>
                </div>
                    
                <div class="form-group">
                    <%= f.label :comments %>
                    <%= f.text_area :comments, class: 'form-control' %>
                </div>
                <%= f.submit "Submit", class: 'btn btn-default' %>
            <% end %>
        </div>
    </div>
</div>