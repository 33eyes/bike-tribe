<div class="row">
  <div class="col-md-2" id="signup-title-section">
    <div id="signup-title" class="vertical">
      <% if params[:plan] == '2' %>
        <h2>Sign up for premium</h2>
      <% else %>
        <h2>Sign up for free</h2>
      <% end %>
    </div>
  </div>
  
  <div class="col-md-4" id="signup-form-section">
    <div class="well" id="signup-form">
      <% if params[:plan] == '2' %>
        <%= render "premium_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

